{
  "root": true,
  "env": {
    "node": true
  },
  "parser": "@babel/eslint-parser",
  "extends": ["plugin:prettier/recommended"],
  "plugins": ["graphql", "simple-import-sort"],
  "rules": {
    "simple-import-sort/imports": "warn",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 100
      }
    ]
  },
  "settings": {
    "import/core-modules": ["path"],
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
