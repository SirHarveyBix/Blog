{
  "ts-node": {
    "file": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2018",
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "module": "commonjs",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": ["node_modules"],
  "include": [
    "*.ts",
    "./**/*.graphql",
    "./**/*.md",
    "server.ts",
    "schema/typeDefs/documentNode.d.ts"
  ]
  // "files": ["./**/*.graphql", "./**/*.md", "*.md"]
}
